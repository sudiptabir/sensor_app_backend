<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Devices - Admin Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body { background: #f5f7fa; }
    .sidebar {
      min-height: 100vh;
      background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    .sidebar a {
      color: rgba(255,255,255,0.8);
      text-decoration: none;
      padding: 15px 20px;
      display: block;
    }
    .sidebar a:hover, .sidebar a.active {
      background: rgba(255,255,255,0.1);
      color: white;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('partials/sidebar', { activePage: 'devices', adminName }) %>
      
      <main class="col-md-10 ms-sm-auto px-4 py-4">
        <h1 class="mb-4">Device Management</h1>
        
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Registered Devices</h5>
            <input type="text" class="form-control w-25" placeholder="Search devices..." id="searchBox">
          </div>
          <div class="card-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Device ID</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Status</th>
                  <th>Last Seen</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% devices.forEach(device => { %>
                  <tr>
                    <td><code><%= device.id %></code></td>
                    <td><%= device.name || 'Unnamed Device' %></td>
                    <td><%= device.type || 'Raspberry Pi' %></td>
                    <td>
                      <% if (device.online) { %>
                        <span class="badge bg-success">Online</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Offline</span>
                      <% } %>
                    </td>
                    <td><%= device.lastSeen ? new Date(device.lastSeen).toLocaleString() : 'Never' %></td>
                    <td>
                      <button class="btn btn-sm btn-danger" onclick="removeDevice('<%= device.id %>', '<%= device.name || 'Device' %>')">
                        <i class="bi bi-trash"></i> Remove Device
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>
  
  <script>
    document.getElementById('searchBox').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const rows = document.querySelectorAll('tbody tr');
      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      });
    });

    async function removeDevice(deviceId, deviceName) {
      const confirmed = confirm(`Are you sure you want to remove device "${deviceName}"? This will:\n\n✓ Deregister the device from Firestore\n✓ Remove all device details\n✓ Remove all access control records\n\nThis action cannot be undone.`);
      
      if (!confirmed) return;

      try {
        console.log('Removing device:', deviceId);
        const response = await fetch(`/api/devices/${deviceId}`, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin'
        });

        const data = await response.json();
        console.log('Response:', data);

        if (response.ok) {
          alert(`Device "${deviceName}" removed successfully`);
          location.reload();
        } else {
          alert(`Failed to remove device: ${data.error || 'Unknown error'}`);
        }
      } catch (error) {
        console.error('Error removing device:', error);
        alert(`Error: ${error.message}`);
      }
    }
  </script>
</body>
</html>
